<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


 <ImageButton
     android:id="@+id/TakePict"

     android:layout_width="78dp"
     android:layout_height="87dp"
     android:layout_marginEnd="48dp"
     android:layout_marginBottom="48dp"
     android:onClick="snapPicture"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:srcCompat="@android:drawable/ic_menu_camera" />

 <TextView
     android:id="@+id/GotoGalleryButton"
     android:layout_width="173dp"
     android:layout_height="35dp"
     android:clickable="true"
     android:elegantTextHeight="true"
     android:onClick="goToGallery"
     android:text="Gallery"
     android:textAlignment="center"
     android:textSize="22dp"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"

     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/TotalsScreen"
     app:layout_constraintVertical_bias="0.150" />

 <TextView
     android:id="@+id/ContactUs"
     android:layout_width="173dp"
     android:layout_height="35dp"
     android:clickable="true"
     android:elegantTextHeight="true"
     android:onClick="goToContactUs"
     android:text="Contact Us"
     android:textAlignment="center"
     android:textSize="22dp"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"


     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/GotoGalleryButton"
     app:layout_constraintVertical_bias="0.150" />

 <TextView
     android:id="@+id/TotalsScreen"
     android:layout_width="173dp"
     android:layout_height="35dp"
     android:clickable="true"
     android:elegantTextHeight="true"
     android:onClick="goToTotalsScreen"
     android:text="Totals"
     android:textAlignment="center"
     android:textSize="22dp"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"


     app:layout_constraintStart_toStartOf="parent"

     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintVertical_bias="0.228" />

</androidx.constraintlayout.widget.ConstraintLayout>